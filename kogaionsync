#!/usr/bin/env bash

checkroot () {
	if [[ "$(whoami)" != root ]] ; then
		echo "You must be root to perform this operation!"
		exit 1
	fi
}

sync_portage_config () {
	echo ""
	echo "Syncing portage config files, please wait!"
	echo ""
	sleep 1
	pushd /opt/kogaion-build > /dev/null 2>&1
	git pull
	popd > /dev/null 2>&1
}

main () {
	if checkroot ; then
		sync_portage_config
	fi
}

main
